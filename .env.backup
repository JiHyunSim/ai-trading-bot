# Local Development Environment Variables
# Copy to .env and modify with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=trading_bot
DB_PASSWORD=trading_bot_password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# OKX API Configuration (Replace with your actual keys)
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_SANDBOX=true

# Application Configuration
ENVIRONMENT=local
LOG_LEVEL=DEBUG
BATCH_SIZE=1000
BATCH_TIMEOUT=30

# Gateway Service Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# Collector Service Configuration
COLLECTOR_HOST=0.0.0.0
COLLECTOR_PORT=8001

# Processor Service Configuration
PROCESSOR_HOST=0.0.0.0
PROCESSOR_PORT=8002

# Monitoring
PROMETHEUS_PORT=8090
HEALTH_CHECK_INTERVAL=30

# Default subscriptions for development
DEFAULT_SYMBOLS=BTC-USDT,ETH-USDT
DEFAULT_TIMEFRAMES=1m,5m,1H