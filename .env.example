# 환경 설정 예시 파일
# 실제 사용 시 .env 파일로 복사하여 값을 설정하세요

# 환경 구분
ENV=development
DEBUG=true

# OKX API 설정
OKX_API_KEY=your_api_key_here
OKX_SECRET_KEY=your_secret_key_here
OKX_PASSPHRASE=your_passphrase_here
OKX_SANDBOX=true

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=okx_trading_data
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# 서비스 설정
BATCH_SIZE=100
BATCH_TIMEOUT=5
MAX_RECONNECT_DELAY=300
WORKER_PROCESSES=4

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# 모니터링 설정
PROMETHEUS_PORT=8080
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# API 설정
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# 보안 설정
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# 알림 설정 (선택사항)
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 백업 설정 (선택사항)
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
S3_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# 개발 도구 설정
PROFILING_ENABLED=false
SENTRY_DSN=